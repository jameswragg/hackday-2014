<div class="widget {{name}} {{#if enabled}}widget--active{{/if}}">

	<header class="widget__header">
		<i class="circle"></i> {{name}}
	</header>
	
	<div class="widget__content">
		<h1 class="widget__content__header">{{time}}</h1>
		<p class="day">{{day}}</p>
		<p class="date">{{date}}</p>
	</div>

</div>